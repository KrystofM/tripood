                    .option-tools
                        .option-tools-item.view-info
                            i(aria-hidden="true").fa.fa-info-circle
                        .option-tools-item.view-delete
                            i(aria-hidden="true").fa.fa-trash

            .option-item
                .option-item-in
                    .option-icon
                        i(aria-hidden="true").fa.fa-money

                    .option-money
                        .option-money-wrap
                            label(for="money1").option-money-label od
                            input(type="number" name="number" id="money1").option-money-input
                        .option-money-wrap
                            label(for="money2").option-money-label do
                            input(type="number" name="number" id="money2").option-money-input

                .option-currency
                    .option-currency-text Vyber měnu
                    select.option-currency-select
                        option(value="CZK - Česká koruna").option-currency CZK - Česká koruna
                        option(value="EUR - Euro").option-currency EUR - Euro
                        option(value="USD - Americký dolar").option-currency USD - Americký dolar
                        option(value="GBP - Anglická libra").option-currency GBP - Anglická libra

                .option-tools
                    .option-tools-item.view-info
                        i(aria-hidden="true").fa.fa-info-circle
                    .option-tools-item.view-delete
                        i(aria-hidden="true").fa.fa-trash

            .option-item
                .option-item-in
                    .option-icon
                        i(aria-hidden="true").fa.fa-plus

                    .option-input
                        textarea(type="text" name="text" placeholder="Výhody a plusy").option-input-in.view-area

                    .option-tools
                        .option-tools-item.view-info
                            i(aria-hidden="true").fa.fa-info-circle
                        .option-tools-item.view-delete
                            i(aria-hidden="true").fa.fa-trash

            .option-item
                .option-item-in
                    .option-icon
                        i(aria-hidden="true").fa.fa-minus

                    .option-input
                        textarea(type="text" name="text" placeholder="Nevýhody a mínusy").option-input-in.view-area

                    .option-tools
                        .option-tools-item.view-info
                            i(aria-hidden="true").fa.fa-info-circle
                        .option-tools-item.view-delete
                            i(aria-hidden="true").fa.fa-trash

            .option-item
                .option-item-in
                    .option-icon
                        i(aria-hidden="true").fa.fa-minus

                    .option-input
                        input(type="text" name="text" placeholder="Fotogalerie" disabled).option-input-in

                    .option-tools
                        .option-tools-item.view-info
                            i(aria-hidden="true").fa.fa-info-circle
                        .option-tools-item.view-delete
                            i(aria-hidden="true").fa.fa-trash

                .option-images
                    each item in [1, 2, 3, 4, 5, 6]
                        .option-images-item
                            .option-images-item-image
                                img(src="images/1.jpeg").option-images-item-image-img
                            .option-images-item-textarea
                                i(aria-hidden="true").fa.fa-pencil-square-o.option-images-item-textarea-icon
                                textarea().option-images-textarea-input Zadej krátký popisek bla a bla bla bla
                            .btnCore.option-images-item-button Smazat

                    .option-upload
                        i(aria-hidden="true").fa.fa-plus.option-upload-plus
                        i(aria-hidden="true").fa.fa-camera.option-upload-camera

            .option-item
                .option-add
                    .option-add-wrap
                        .option-add-icon
                            i(aria-hidden="true").fa.fa-wrench
                        .option-add-title Přidat další nástroje
                        .option-add-arrow
                            i(aria-hidden="true").fa.fa-arrow-up

                    .option-add-items
                        .option-add-items-item
                            i(aria-hidden="true").fa.fa-file-text.option-add-items-item-icon
                            p.option-add-items-item-text Přidat text
                            i(aria-hidden="true").fa.fa-plus.option-add-items-item-plus

                        .option-add-items-item
