extends layouts/section

append vars
    - var title = "Forgotten Password"
    - var sectionTitle = "Forgotten Password"

block sectionPicture
    .section-heading-picture.view-grey
        i(aria-hidden="true").fa.fa-user-circle.menu-links-item-i.section-heading-picture-font

block sectionContent
    .login
        form.login-form
            .login-form-wrap
                label(for="password").login-form-label= "Email"
                .login-form-input.view-envelope
                    input(type="text", name="password", id="password").login-form-input-in

        a(href="/video-step2.html").steps-finishbox-buttons-next.login-btn-center Send